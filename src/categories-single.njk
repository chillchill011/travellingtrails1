---
layout: base
pagination:
  data: collections.categories
  size: 1
  alias: category
permalink: "{% if category.slug %}categories/{{ category.slug }}/{% endif %}"
eleventyComputed:
  title: "{{ category.title }} Adventures | Travelling Trails"
---

<div class="max-w-7xl mx-auto">
  <header class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">{{ category.title }} Adventures</h1>
    <p class="text-xl text-gray-600 dark:text-gray-300">
      Exploring {{ category.count }} {{ category.title | lower }} adventures
    </p>
  </header>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {%- for post in category.posts -%}
      {% include "components/blog-card.njk" %}
    {%- endfor -%}
  </div>
</div>