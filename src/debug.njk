---
layout: base
permalink: /debug/
---

<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-8">Debug Related Posts</h1>
  
  {% for post in collections.post %}
    <div class="mb-8 p-4 border rounded">
      <h2 class="text-2xl font-bold">{{ post.data.title }}</h2>
      <p>URL: {{ post.url }}</p>
      <p>Categories: {{ post.data.categories | dump }}</p>
      
      <h3 class="mt-4 font-bold">Related Posts:</h3>
      {% set relatedPosts = post | getRelatedPosts(collections.post) %}
      <p>Count: {{ relatedPosts.length }}</p>
      <ul>
        {% for related in relatedPosts %}
          <li>{{ related.data.title }} ({{ related.data.categories | dump }})</li>
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</div>