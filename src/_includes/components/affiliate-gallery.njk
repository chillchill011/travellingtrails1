{% macro affiliateGallery(items, title="Gear That Made This Trip Possible") %}
<div class="affiliate-container my-8">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{{ title }}</h2>
  <p class="text-sm text-gray-600 dark:text-gray-400 mb-6">
    <svg xmlns="http://www.w3.org/2000/svg" class="inline-block h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    The products featured here helped make this journey possible. As an affiliate, I may earn from qualifying purchases at no additional cost to you.
  </p>
  <div class="gallery-grid">
    {% for item in items %}
    <figure class="gallery-item affiliate-item">
      <div class="gallery-image-wrapper">
        <img 
          src="{{ item.src | url }}" 
          alt="{{ item.alt }}" 
          class="gallery-image"
          loading="lazy"
        >
      </div>
      <figcaption>
        {% if item.title %}
          <span class="block font-medium text-center">{{ item.title }}</span>
        {% endif %}
        
        {% if item.description %}
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-2 text-center">
          {{ item.description }}
        </p>
        {% endif %}
        
        <div class="flex flex-wrap justify-center mt-2">
          {% if item.ownershipStatus %}
          <span class="inline-block px-3 py-0.5 text-xs {% if item.ownershipStatus == 'I own this' %}bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200{% else %}bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200{% endif %} rounded-full mx-1 my-1">
            {{ item.ownershipStatus }}
          </span>
          {% endif %}
          
          {% if item.price %}
          <span class="inline-block px-3 py-0.5 text-xs bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-200 rounded-full mx-1 my-1">
            {{ item.price }}
          </span>
          {% endif %}
        </div>
        
        {% if item.rating %}
        <div class="flex justify-center mt-2">
          {% for i in range(1, 6) %}
          <svg class="w-4 h-4 {{ 'text-yellow-400' if i <= item.rating else 'text-gray-300 dark:text-gray-600' }}" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          {% endfor %}
        </div>
        {% endif %}
        
        {% if item.buyUrl %}
        <div class="text-center mt-3">
          <a href="{{ item.buyUrl }}" target="_blank" rel="nofollow noopener" class="inline-block px-4 py-2 bg-travel-600 text-white rounded-md hover:bg-travel-700 transition-colors duration-200 text-sm">
            Where to Buy
          </a>
        </div>
        {% endif %}
      </figcaption>
    </figure>
    {% endfor %}
  </div>
</div>
{% endmacro %}