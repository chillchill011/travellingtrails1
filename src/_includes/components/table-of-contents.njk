{% macro tableOfContents(headings) %}
<div class="toc-container bg-gray-50 dark:bg-gray-800 p-4 rounded-lg mb-8 border border-gray-200 dark:border-gray-700">
  <div class="toc-header flex justify-between items-center mb-2">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Table of Contents</h2>
    <button id="toc-toggle" class="md:hidden text-travel-600 dark:text-travel-400 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </button>
  </div>
  
  <div id="toc-content" class="toc-content">
    <ol class="toc-list list-none pl-0 space-y-1">
      {% for heading in headings %}
        <li class="toc-item ml-{{ (heading.level - 2) * 4 }}">
          <a href="#{{ heading.id }}" 
             class="toc-link text-travel-600 dark:text-travel-400 hover:text-travel-800 dark:hover:text-travel-300 text-sm">
            {{ heading.text }}
          </a>
        </li>
      {% endfor %}
    </ol>
  </div>
</div>
{% endmacro %}