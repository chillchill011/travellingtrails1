{% macro categoryCard(category) %}
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
  <h3 class="text-xl font-semibold mb-2">
    <a href="{% categoryUrl category.title %}" 
       class="text-gray-900 dark:text-white hover:text-travel-700 dark:hover:text-travel-500">
      {{ category.title }}
    </a>
  </h3>
  <p class="text-gray-600 dark:text-gray-400">
    {{ category.count }} article{% if category.count != 1 %}s{% endif %}
  </p>
</div>
{% endmacro %}