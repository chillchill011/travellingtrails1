<!-- Scripts for sharing -->
<script>
  function copyToClipboard(text) {
    // Create temp input element
    const input = document.createElement('input');
    input.setAttribute('value', text);
    document.body.appendChild(input);
    input.select();
    document.execCommand('copy');
    document.body.removeChild(input);
    
    // Show feedback
    const copyButton = document.querySelector('.copy-link-button');
    const originalBg = copyButton.style.backgroundColor;
    copyButton.style.backgroundColor = '#059669'; // Green success color
    
    setTimeout(() => {
      copyButton.style.backgroundColor = originalBg;
    }, 1500);
  }

  // Mobile-friendly Instagram sharing
  function shareToInstagram(title, url) {
    // On mobile, try to open the Instagram app
    if (/Android|iPhone|iPad|iPod/i.test(navigator.userAgent)) {
      // First try to copy to clipboard
      copyToClipboard(url);
      
      // Show a notification
      alert('Link copied! Open Instagram and paste in your story or message.');
      
      // Try to open Instagram app
      setTimeout(() => {
        window.location.href = 'instagram://';
      }, 300);
    } else {
      // On desktop, copy to clipboard and show instructions
      copyToClipboard(url);
      alert('Link copied to clipboard! You can paste it in Instagram.');
    }
  }

  // Mobile-friendly Snapchat sharing
  function shareToSnapchat(title, url) {
    // On mobile, try to open the Snapchat app
    if (/Android|iPhone|iPad|iPod/i.test(navigator.userAgent)) {
      // First try to copy to clipboard
      copyToClipboard(url);
      
      // Show a notification
      alert('Link copied! Open Snapchat and paste in your snap or message.');
      
      // Try to open Snapchat app
      setTimeout(() => {
        window.location.href = 'snapchat://';
      }, 300);
    } else {
      // On desktop, copy to clipboard and show instructions
      copyToClipboard(url);
      alert('Link copied to clipboard! You can paste it in Snapchat.');
    }
  }
</script>
