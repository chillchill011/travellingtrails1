{% macro enhancedImage(src, alt, caption, credit, className = '') %}
<figure class="relative group">
  <img
    src="{{ src }}"
    alt="{{ alt }}"
    loading="lazy"
    class="w-full h-auto rounded-lg transition duration-300 {{ className }}"
  />
  
  <figcaption class="mt-2 text-sm text-gray-600 dark:text-gray-400">
    {% if alt %}<span class="block">{{ alt }}</span>{% endif %}
    {% if caption %}<span class="block mt-1">{{ caption }}</span>{% endif %}
    {% if credit %}<span class="block text-xs mt-1">Photo by: {{ credit }}</span>{% endif %}
  </figcaption>
</figure>
{% endmacro %}