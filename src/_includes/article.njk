---
layout: 'base.njk'
---
       
<article class="main-article dark:bg-gray-800 dark:text-gray-100">
<div class="container container--narrow flow">
  
    <h1 class="article-title text-gray-900 dark:text-white">
      {{ title }}
    </h1>
   
    <p class="snippet__meta text-gray-600 dark:text-gray-400">
     Author:  {{ author }} | Tags: {{ tags }} 
    </p>

    <figure class="main-article__figure">
      <img src="{{ image }}" alt="{{ imageAlt }}">
      <figcaption>
        {{ imageAlt }}
      </figcaption>
    </figure>
    
    {{ content | safe }}

</div>
</article>
