---
layout: 'base.njk'
---

{% from "components/breadcrumb.njk" import breadcrumb %}
<div class="container mx-auto">
    {{ breadcrumb({
        url: page.url,
        data: {
            title: title,
            categories: categories
        }
    }) }}
</div>

<article class="max-w-4xl mx-auto px-4 py-8">
    {# Rest of your article template remains exactly the same #}
    <header class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
            {{ title }}
        </h1>

        <div class="flex flex-wrap items-center gap-4 text-gray-600 dark:text-gray-400">
            {% if author %}
            <div>Author: {{ author }}</div>
            {% endif %}
            
            {% if categories %}
            <div class="flex items-center gap-2">
                <span>Categories:</span>
                <div class="flex flex-wrap gap-2">
                    {% for category in categories %}
                    <a href="{{ '/travellingtrails1/categories/' + category | lower | replace(' ', '-') + '/' | url }}"
                       class="inline-block px-3 py-1 text-sm bg-travel-600 text-white dark:bg-travel-700 rounded-full hover:bg-travel-700 dark:hover:bg-travel-600 transition-colors duration-200">
                        {{ category }}
                    </a>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </header>

    {% if featuredImage %}
    <figure class="mb-8">
        <img src="{{ featuredImage | url }}" 
             alt="{{ imageAlt if imageAlt else title }}"
             class="w-full h-auto rounded-lg shadow-lg object-cover"
        >
        {% if imageAlt %}
        <figcaption class="text-center text-gray-600 dark:text-gray-400 mt-2">
            {{ imageAlt }}
        </figcaption>
        {% endif %}
    </figure>
    {% endif %}

    <div class="prose prose-lg dark:prose-invert max-w-none">
        {{ content | safe }}
    </div>
</article>